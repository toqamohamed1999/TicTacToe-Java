<AnchorPane id="HomeAnchorPane" fx:id="multiplayerScreenAnchor" prefHeight="400.0" prefWidth="600.0" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
