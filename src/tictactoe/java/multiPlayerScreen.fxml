            <Font name="Impact" size="40.0" />
         </font>
      </Label>
      <Circle fx:id="onlineCircle" fill="#44a7a1" layoutX="422.0" layoutY="210.0" radius="51.0" stroke="BLACK" strokeType="INSIDE" />
