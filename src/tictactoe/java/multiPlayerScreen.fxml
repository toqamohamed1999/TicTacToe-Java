      </ImageView>
      <ImageView fx:id="profilePic" fitHeight="57.0" fitWidth="66.0" layoutX="520.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../res/woman.png" />
         </image>
      </ImageView>
      <Label fx:id="multiplayerLabel" layoutX="162.0" layoutY="38.0" prefHeight="67.0" prefWidth="301.0" text="MultiPlayer Mode" textFill="WHITE">
